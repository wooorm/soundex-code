{
  "name": "soundex-code",
  "version": "1.0.4",
  "description": "Soundex phonetic algorithm",
  "license": "MIT",
  "keywords": [
    "natural",
    "language",
    "phonetics",
    "soundex",
    "cli",
    "bin"
  ],
  "homepage": "https://words.github.io/soundex-code/",
  "repository": "words/soundex-code",
  "bugs": "https://github.com/words/soundex-code/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js",
    "cli.js"
  ],
  "bin": "cli.js",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.0.0",
    "execa": "^1.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^5.0.0",
    "tape": "^4.4.0",
    "tinyify": "^2.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s soundexCode -o soundex-code.js",
    "build-mangle": "browserify . -s soundexCode -p tinyify -o soundex-code.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-multi-assign": "off"
    },
    "ignores": [
      "soundex-code.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
