{
  "name": "soundex-code",
  "version": "1.0.0",
  "description": "Soundex phonetic algorithm",
  "license": "MIT",
  "keywords": [
    "natural",
    "language",
    "phonetics",
    "soundex",
    "cli",
    "bin"
  ],
  "repository": "https://github.com/wooorm/soundex-code",
  "bugs": "https://github.com/wooorm/soundex-code/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js",
    "cli.js"
  ],
  "bin": "cli.js",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^14.0.0",
    "esmangle": "^1.0.0",
    "execa": "^0.6.0",
    "nyc": "^10.0.0",
    "remark-cli": "^3.0.0",
    "remark-preset-wooorm": "^2.0.0",
    "tape": "^4.4.0",
    "xo": "^0.18.0"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-bundle": "browserify index.js -s soundexCode > soundex-code.js",
    "build-mangle": "esmangle soundex-code.js > soundex-code.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "ignores": [
      "soundex-code.js"
    ]
  },
  "remarkConfig": {
    "plugins": ["preset-wooorm"]
  }
}
